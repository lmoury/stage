{% extends 'frontend/layout.html.twig' %}

{% block title %} Listing des parking {{ parent() }}{% endblock %}

{% block body %}
<h1 class="text-center mb-4">Listing des parking</h1>

<button class="btn btn-primary mb-4" data-toggle="modal" data-target="#modalParkingRemorque">Ajouter une remorque</button>

<!-- Nav tabs -->
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#home">Home</a>
    </li>
    {% for parking in parkings %}
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#menu{{ parking.id }}">{{ parking.denomination }}</a>
    </li>
    {% endfor %}
</ul>

<!-- Tab panes -->
<div class="tab-content content-section mb-4">
    <div id="home" class="container tab-pane active">
        <table class="table" id="tableSearch">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Remorque</th>
                    <th>Parking</th>
                    <th>Date mise en parking</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                    {% for parking in parkings %}
                {% for operation in parking.operations %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>
                        <a href="#" data-title="Remorque" data-toggle="modal" data-target="#modalRemorque{{ operation.remorque.id }}" >
                            {{ operation.remorque.remorque }}
                        </a>
                        {{ include('frontend/inc/modalRemorque.html.twig', {id: operation.remorque.id, remorque: operation.remorque.remorque, immatriculation: operation.remorque.immatriculation, type: operation.remorque.type.denomination}) }}
                    </td>
                    <td>{{ parking.denomination }}</td>
                    <td>{{ operation.dateCreation | localizeddate('none', 'none', 'fr', null, 'd MMMM Y à H:m') }}</td>
                    <td>
                        {% if is_granted('ROLE_PARKING') %}
                        <button class="btn btn-primary" data-toggle="modal" data-target="#modalParquer" data-operation-id="{{ operation.id }}">Modification</button>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% for parking in parkings %}
    <div id="menu{{ parking.id }}" class="container tab-pane fade">
        <table class="table tableSearch">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Remorque</th>
                    <th>Date mise en parking</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for operation in parking.operations %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>
                        <a href="#" data-title="Remorque" data-toggle="modal" data-target="#remorque{{ operation.remorque.id }}" >
                            {{ operation.remorque.remorque }}
                        </a>
                        {{ include('frontend/inc/modalRemorque.html.twig', {id: operation.remorque.id, remorque: operation.remorque.remorque, immatriculation: operation.remorque.immatriculation, type: operation.remorque.type.denomination}) }}
                    </td>
                    <td>{{ operation.dateCreation | localizeddate('none', 'none', 'fr', null, 'd MMMM Y à H:m') }}</td>
                    <td>
                        {% if is_granted('ROLE_PARKING') %}
                        <button class="btn btn-primary" data-toggle="modal" data-target="#modalParquer" data-operation-id="{{ operation.id }}">Modification</button>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% endfor %}
</div>
{{ include('frontend/inc/modalParquer.html.twig') }}
<!-- Modal -->
<div class="modal fade" id="modalParkingRemorque" tabindex="-1" role="dialog" aria-labelledby="exampleModalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalTitle">
                    <strong>Ajouter une remorque à un parking</strong><br/>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>
{% endblock %}
