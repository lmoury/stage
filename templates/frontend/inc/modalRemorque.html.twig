<div class="modal fade" id="modalRemorque{{ id }}" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalTitle">
                    <strong>{{ remorque }}</strong><br/>
                    {% if ope.parking.denomination is defined %}
                        <small>Emplacement :</small> <strong>{{ ope.parking.denomination }}</strong>
                    {% endif %}
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>
            <div class="modal-body">
                <div><span>Immatriculation : </span><span>{{ immatriculation }}</span></div>
                <div><span>Type : </span><span>{{ type }}</span></div>
            </div>
            {% if is_granted('ROLE_EMPLOYE') %}
            <div class="modal-footer">
                <a class="btn btn-primary" href="{{ path('admin.remorque.editer', {id: id}) }}">Profil</a>
            </div>
            {% endif %}
        </div>
    </div>
</div>
