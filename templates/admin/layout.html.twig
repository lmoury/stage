<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title %}| Lmoury{% endblock %}</title>
        {% block stylesheets %}
            <!-- css -->
            <link rel="stylesheet" type="text/css" href="/assets/plugins/bootstrap/css/bootstrap.min.css">
            <link rel="stylesheet" type="text/css" href="/assets/admin/css/style.css">
            <link rel="stylesheet" type="text/css" href="/assets/css/styleOperation.css">
            <!-- Font -->
            <link rel="stylesheet" type="text/css" media="all" href="/assets/css/font-awesome.css"/>
        {% endblock %}
    </head>
    <body>
        <div class="wrapper">
            {{ include("admin/inc/sidebar.html.twig") }}
            <div id="content">
                {{ include("admin/inc/navbar.html.twig") }}
                <div class="app-title">
                    <h1>{% block titrePage %}{% endblock %}</h1>
                    <ul class="app-breadcrumb breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('admin') }}"><i class="fa fa-home fa-lg"></i></a></li>
                        {% block breadcrumb %}{% endblock %}
                    </ul>
                </div>
                <div class="container">
                    {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        <i class="fa fa-check"></i> <strong> Success !!!</strong> {{ message }}
                    </div>
                    {% endfor %}
                    {% block body %}{% endblock %}
                </div>
                {{ include("inc/footer.html.twig") }}
            </div>
        </div>

        {% block javascripts %}
            <!-- javascript -->
            <script src="/assets/js/jquery.min.js"></script>
            <script src="/assets/js/popper.min.js"></script>
            <script src="/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
            <script src="/assets/plugins/dataTable/js/jquery.dataTables.min.js"></script>
            <script src="/assets/plugins/dataTable/js/dataTables.bootstrap4.min.js"></script>
            <script>
            $(document).ready(function() {
                $('#tableSearch').DataTable({
                    "iDisplayLength": 25
                });
                $('.tableSearch').DataTable({
                    "iDisplayLength": 25
                });
            } );
            </script>
            <script type="text/javascript">
                $(document).ready(function () {
                    $('#sidebarCollapse').on('click', function () {
                        $('#sidebar').toggleClass('active');
                    });
                });
            </script>
       {% endblock %}

    </body>
</html>
