{% block title %} Listing des utilisateurs {{ parent() }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="/assets/plugins/dataTable/css/dataTables.bootstrap4.min.css">
{% endblock %}

{% block titrePage %}Listing des utilisateurs{% endblock %}

{% block breadcrumb %}
<li class="breadcrumb-item">Utilisateurs</li>
{% endblock %}

{% block body %}

<div class="clearfix">
    <a href="" class="float-right mb-3 btn btn-primary" title="Rafraichir la page"><i class="fa fa-refresh"></i></a>
    <a href="{{ path('admin.utilisateur.new') }}" class="btn btn-primary mb-3">Ajouter</a>
</div>

<div class="content-section">
    <table class="table table-bordered table-responsive text-center" id="tableUsers">
        <thead>
            <tr>
                <th>login</th>
                <th>Nom</th>
                <th>Prenom</th>
