{% extends 'backend/layout.html.twig' %}

{% block title %} Listing des quais {{ parent() }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="/assets/plugins/dataTable/css/dataTables.bootstrap4.min.css">
{% endblock %}

{% block titrePage %}Listing des quais{% endblock %}

{% block breadcrumb %}
<li class="breadcrumb-item">Quai</li>
{% endblock %}

{% block body %}
<div class="clearfix">
    <a href="" class="float-right mb-3 btn btn-primary" title="Rafraichir la page"><i class="fa fa-refresh"></i></a>
    <button class="btn btn-primary mb-3" data-toggle="modal" data-target="#modalNewQuai">Ajouter</button>
</div>

<div class="content-section">
    <div id="legende">
        <div class="ligne">
            <div> Légende : </div>
            <div class="couleur etat0"> Libre </div>
            <div class="couleur etat1"> En maintenance </div>
            <div class="couleur etat2"> Occupé </div>
            <div class="couleur etat3"> Remorque à deplacer </div>
        </div>
    </div>
    <table class="table table-bordered table-responsive text-center" id="tableSearch">
        <thead>
            <tr>
                <th>Quai</th>
                <th>Operation</th>
                <th>Remorque</th>
                <th>Date de mise à quai</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for quai in quais %}
            <tr class="{% if quai.operation %}etat{{ quai.operation.operation }}{% elseif quai.maintenance %}etat1{% else %}etat0{% endif %}">
                <td>{{ quai.numero }}</td>
                <td>{% if quai.operation %}{{ quai.operation.operationType }}{% elseif quai.maintenance %}En maitenance{% else %}Libre{% endif %}</td>
                <td>
                    {% if quai.operation %}
                    <a href="#" data-title="Remorque" data-toggle="modal" data-target="#remorque{{ quai.operation.remorque.id }}" >
                        {{ quai.operation.remorque.remorque }}
                    </a>
                    <div class="modal fade" id="remorque{{ quai.operation.remorque.id }}" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">
                                        Remorque :
                                    </h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div><span>Nom : </span><span>{{ quai.operation.remorque.remorque }}</span></div>
                                    <div><span>Immatriculation : </span><span>{{ quai.operation.remorque.immatriculation }}</span></div>
                                    <div><span>Type : </span><span>{{ quai.operation.remorque.type.denomination }}</span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </td>
                <td>
                    {% if quai.operation %}
                        {{ quai.operation.dateCreation | localizeddate('none', 'none', 'fr', null, 'd MMMM Y à H:m') }}
                    {% endif %}
                </td>
                <td>
                    {% if quai.operation == null %}
                    {% if quai.maintenance %}
                        <a class="btn btn-primary" href="{{ path('admin.quai.maintenance', {id: quai.id}) }}">Activer</a>
                    {% else %}
                        <a class="btn btn-primary" href="{{ path('admin.quai.maintenance', {id: quai.id}) }}">Désactiver</a>
                    {% endif %}
                    <a href="#" class="btn btn-primary" data-title="Delete" data-toggle="modal" data-target="#deleteCom{{ quai.id }}">Supprimer</a>
                    <!-- modal suppression quai -->
                    <div class="modal fade" id="deleteCom{{ quai.id }}" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Veuillez confirmer la suppression ?</div>
                                </div>
                                <div class="modal-footer">
                                <form method="post" action="{{ path('admin.quai.delete', {id: quai.id})}}">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button class="btn btn-danger">Supprimer</button>
                                </form>
                                <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Non</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
<!-- Modal -->
<div class="modal fade" id="modalNewQuai" tabindex="-1" role="dialog" aria-labelledby="exampleModalTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalTitle">
                    Ajouter un quai
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ form_start(form) }}
                <div class="row">
                        <div class="col-md-7">
                            {{ form_widget(form.numero) }}
                            {{ form_errors(form.numero) }}
                        </div>
                        <div class="col-md-5">
                            {{ form_rest(form) }}
                            <div class="float-right btn-container">
                                <button class="btn btn-primary">Ajouter</button>
                            </div>
                        </div>

                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
